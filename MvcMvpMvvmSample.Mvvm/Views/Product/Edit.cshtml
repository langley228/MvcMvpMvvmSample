@model MvcMvpMvvmSample.Mvvm.ViewModels.ProductViewModel

<h2>@(ViewContext.RouteData.Values["action"].ToString() == "Create" ? "新增產品" : "編輯產品")</h2>
<form asp-action="@ViewContext.RouteData.Values["action"]" method="post">
    <input asp-for="Id" type="hidden" />
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <button type="submit">儲存</button>
    <a asp-action="Index">回列表</a>
</form>